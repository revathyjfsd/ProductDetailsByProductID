    <filter-name>ProductValidationFilter</filter-name>
    <filter-class>com.product.filters.ProductValidationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ProductValidationFilter</filter-name>
    <url-pattern>/ProductValidationFilter</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ProductValidationFilter</filter-name>
    <servlet-name>ProductController</servlet-name>
  </filter-mapping>
